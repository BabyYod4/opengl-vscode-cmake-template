    "version": "0.2.0",
    "configurations": [

        {
            "program": "${workspaceRoot}/bin/opengl.exe",
            "name": "C++ Launch",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "debugRun",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "linux": {
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "windows": {
                "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe"
            }
        }
    ]
}